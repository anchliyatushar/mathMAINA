<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fourFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/comickings"
        android:text="Tables"
        android:textAlignment="center"
        android:textColor="@color/headcolor"
        android:textSize="@dimen/headsize"/>
    <TextView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fill"
        android:layout_below="@+id/table"
        android:layout_marginTop="10dp"
        android:background="#000000"/>
    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:orientation="horizontal"
        android:weightSum="1">
    <android.support.design.widget.TextInputEditText
        android:id="@+id/inputnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:hint="@string/enter_the_number_for_table"
        android:inputType="numberDecimal"
        android:textColorHighlight="#4a58fc"/>
        <ImageButton
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="#00000000"
            android:src="@drawable/ic_check_black_24dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lin"
        android:layout_marginTop="10dp"
        android:background="#e1e0e0"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2">
    <TextView
        android:id="@+id/tableshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/comickings"
        android:stateListAnimator="@anim/bounce"
        android:textColor="#ea22a7"
        android:textSize="25sp"

        tools:targetApi="lollipop" />
    </ScrollView>
</RelativeLayout>